package com.webdev.server.dao;

import java.util.Date;
import java.util.List;

import com.webdev.server.POJO.Book;

public interface BookDAO {
	public Book get(int id);
	public Book get(String code);
	public List<Book> getByCategory(int cateId);
	public List<Book> getByCategory(String tag);
	public List<Book> getByDate(Date begin, Date end);
	public List<Book> getPrice(double lte, double gte);
	public List<Book> getPrice(double lte, double gte);
}
